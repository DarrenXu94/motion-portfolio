---
const { name, preview, description, link, imgLink } = Astro.props.project;
import { Image } from "astro:assets";
import Icon from "./icon.astro";
---

<div class="project-card">
  <a class="card" href={preview}>
    <span class="title">{name}</span>

    <Image src={imgLink()} width={imgLink().width / 2} alt={name || ""} />

    <p>{description}</p>
  </a>
  <a href={link}>View code <Icon icon="github-logo" /></a>
</div>

<style>
  .project-card {
    display: flex;
    flex-direction: column;
    align-items: flex-end;
    gap: 0.5rem;
  }

  .title {
    outline: 2px solid var(--gray-200);
  }
  .card {
    width: 100%;
    display: grid;
    grid-template: auto 1fr / auto 1fr;
    height: 15rem;
    background: var(--gradient-subtle);
    border: 1px solid var(--gray-800);
    border-radius: 0.75rem;
    overflow: hidden;
    box-shadow: var(--shadow-sm);
    text-decoration: none;
    font-family: var(--font-brand);
    font-size: var(--text-lg);
    font-weight: 500;
    transition: box-shadow var(--theme-transition);
  }

  .card:hover {
    box-shadow: var(--shadow-md);
  }

  .card p {
    padding: 0.5rem 1rem;
    font-size: var(--text-md);
  }

  .title {
    grid-area: 1 / 1 / 2 / 2;
    z-index: 1;
    margin: 0.5rem;
    padding: 0.5rem 1rem;
    background: var(--gray-999);
    color: var(--gray-200);
    border-radius: 0.375rem;
    width: fit-content;
  }

  img {
    grid-area: 1 / 1 / 3 / 3;
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  @media (min-width: 50em) {
    .card {
      height: 22rem;
      border-radius: 1.5rem;
    }

    .title {
      border-radius: 0.9375rem;
    }
  }
</style>
